<div class="row">
  <div class="col-md-offset-5 col-md-4"> <h1> Log in </h1> </div>
  <div class="col-md-offset-5 col-md-1">
    <form action="<%=session_url%>" method="post">
      <%= auth_token %>
      <div class="row-form-group">
        <div class="col-md-offset-2 col-md-6">
          <label for="user_name"> Username </label>
          <input type="text" name="user[username]" id="user_name" value=""
        </div>
      </div>
      <div class="row-form-group">
        <div class="col-md-offset-2 col-md-6">
          <label for="pass"> Password </label>
          <input type="password" name="user[password]" id="pass">
        </div>
      </div>
      <div class="row-form-group">
        <div class="col-md-offset-4 col-md-6">
          <input type="submit" class="btn btn-primary" value="Log in">
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row form-group">
  <div class="col-md-offset-5 col-md-3">
    <h4> Want to register? <a href="<%=new_user_url%>">Register</a>
      or use the <a href="#">Demo account</a> </h4>
  </div>
</div>

<script type="text/javascript">
  $a = $('h4').children().last();
  var name = "Guest",
      password = "123456";
  $a.on("click", function (e) {
    e.preventDefault();
    $('#user_name').val(name);
    $('#pass').val(password);
  });
</script>

<div class="fullscreen-bg">
    <video loop muted autoplay id="vid" class="fullscreen-bg__video">
        <source src="http://static-p.iuqo.com/media/home/home/video/cloud.mp4">
    </video>
</div>
