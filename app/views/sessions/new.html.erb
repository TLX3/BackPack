<div class="row">
  <div class="col-md-offset-5 col-md-4"> <h1> Log in </h1> </div>
  <div class="col-md-offset-5 col-md-1">
    <form action="<%=session_url%>" method="post">
      <%= auth_token %>
      <div class="row-form-group">
        <div class="col-md-offset-2 col-md-6">
          <label for="user_name"> Username </label>
          <input type="text" name="user[username]" id="user_name" value=""
        </div>
      </div>
      <div class="row-form-group">
        <div class="col-md-offset-2 col-md-6">
          <label for="pass"> Password </label>
          <input type="password" name="user[password]" id="pass">
        </div>
      </div>
      <div class="row-form-group">
        <div class="col-md-offset-4 col-md-6">
          <input type="submit" class="btn btn-default" value="Log in">
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row form-group">
  <div class="col-md-offset-5 col-md-3">
    <h4> Want to register? <a href="<%=new_user_url%>">Register</a>
      or use the <a href="#">Demo account</a> </h4>
  </div>
</div>


<div class="fullscreen-bg">
    <video loop muted autoplay id="vid" class="fullscreen-bg__video">
        <source src="http://ak9.picdn.net/shutterstock/videos/917230/preview/stock-footage-flight-over-the-clouds-loop-able-d-animation-hd-look-also-new-k-clouds-in-my-portfolio-clip.mp4" type="video/mp4">
    </video>
</div>
