<div class="row">
  <div class="col-md-offset-5 col-md-4"> <h1> Sign up form </h1> </div> </div>
  <div class="col-md-offset-5 col-md-1">
    <form action="<%=users_url%>" method="post">
      <%= auth_token %>
      <div class="row-form-group">
        <div class="col-md-offset-2 col-md-6">
          <label for="user_name"> Username </label>
          <input type="text" name="user[username]" id="user_name" value="">
        </div>
      </div>
      <div class="row-form-group">
        <div class="col-md-offset-2 col-md-6">
          <label for="pass"> Password </label>
          <input type="password" name="user[password]" id="pass">
        </div>
      </div>
      <div class="row form-group">
        <div class="col-md-offset-3 col-md-6">
          <button id="uploadWidget">Upload Profile Pic</button>
        </div>
      </div>
      <div class="row-form-group">
        <div class="col-md-offset-4 col-md-6">
            <input type="submit" value="Sign Up">
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row form-group">
  <div class="col-md-offset-5 col-md-3">
    <h4> Already registered? <a href="<%= new_session_url %>"> Log in </a>
        or use the <a href="#">Demo account</a> </h4>
  </div>
</div>

<script type="text/javascript">
  var $widget = $("#uploadWidget");
  $widget.on("click", function (e) {
    e.preventDefault();
    cloudinary.openUploadWidget({ cloud_name: 'dbgfyqa1e',
                                  upload_preset: 'm50nybft'},
      function(error, result) {
        if (result) {
          $widget.text("Upload Successful");
          $widget.append("<p>" + result[0].original_filename + "</p>");
          $("<input>").attr({
              type: "hidden",
              name: "user[picture_url]",
              value: result[0].public_id
          }).appendTo('form');
        }
      }
    );
  });
</script>

<div class="fullscreen-bg">
    <video loop muted autoplay id="vid" class="fullscreen-bg__video">
        <source src="http://ak9.picdn.net/shutterstock/videos/1093015/preview/stock-footage-flying-on-clouds-at-sunset-high-detailed-d-render-loop.mp4" type="video/mp4">
    </video>
</div>
